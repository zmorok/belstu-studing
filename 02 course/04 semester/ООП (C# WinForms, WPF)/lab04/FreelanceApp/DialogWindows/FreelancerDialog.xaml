<Window
    x:Class="FreelanceApp.DialogWindows.FreelancerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FreelanceApp.DialogWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource FreelancersDialog_Title}"
    Width="500"
    Height="550"
    Icon="/Icons/Users.ico"
    Style="{DynamicResource DialogWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Style="{DynamicResource DialogGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Ввод данных  -->
        <StackPanel Grid.Row="0" Style="{DynamicResource DialogStackPanelStyle}">
            <TextBlock Style="{DynamicResource DialogTextBlockStyle}" Text="{DynamicResource FreelancersDialog_Freelancer_Name}" />
            <TextBox
                Name="NameBox"
                Margin="0,5,0,10"
                Style="{DynamicResource DialogTextBoxStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Style="{DynamicResource DialogStackPanelStyle}">
            <TextBlock Style="{DynamicResource DialogTextBlockStyle}" Text="{DynamicResource FreelancersDialog_Freelancer_Skills}" />
            <TextBox
                Name="SkillsBox"
                Margin="0,5,0,10"
                Style="{DynamicResource DialogTextBoxStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{DynamicResource DialogStackPanelStyle}">
            <TextBlock Style="{DynamicResource DialogTextBlockStyle}" Text="{DynamicResource FreelancersDialog_Freelancer_Rating}" />
            <TextBox
                Name="RatingBox"
                Margin="0,5,0,10"
                Style="{DynamicResource DialogTextBoxStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="3" Style="{DynamicResource DialogStackPanelStyle}">
            <TextBlock Style="{DynamicResource DialogTextBlockStyle}" Text="{DynamicResource FreelancersDialog_Freelancer_Description}" />
            <TextBox
                Name="DescriptionBox"
                Margin="0,5,0,10"
                Style="{DynamicResource DialogTextBoxStyle}" />
        </StackPanel>

        <!--  Кнопки  -->
        <Grid Grid.Row="4" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="20"
                Command="{Binding AddCommand}"
                Content="➕" />

            <Button
                Grid.Column="1"
                Width="20"
                Margin="10,0,0,0"
                Command="{Binding SaveCommand}"
                Content="✏️" />

            <Button
                Grid.Column="2"
                Width="20"
                Margin="10,0,0,0"
                Command="{Binding DeleteCommand}"
                Content="🗑️" />
            <Button
                Grid.Column="3"
                Width="20"
                Margin="10,0,0,0"
                Command="{Binding ClearFieldsCommand}"
                Content="🧹" />

            <Button
                Grid.Column="5"
                Width="100"
                Command="{Binding ConfirmCommand}"
                Content="{DynamicResource FreelancersDialog_Btn_Confirm}" />

            <Button
                Grid.Column="6"
                Width="100"
                Margin="10,0,0,0"
                Command="{Binding CancelCommand}"
                Content="{DynamicResource FreelancersDialog_Btn_Cancel}" />
        </Grid>

        <!--  Таблица  -->
        <DataGrid
            Name="FreelancersGrid"
            Grid.Row="5"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            SelectionChanged="FreelancersGrid_SelectionChanged"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    ElementStyle="{DynamicResource DialogDataGridCellStyle}"
                    Header="{DynamicResource FreelancersDialog_DataGrid_Name}"
                    HeaderStyle="{DynamicResource DialogDataGridHeaderStyle}" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Skills}"
                    ElementStyle="{DynamicResource DialogDataGridCellStyle}"
                    Header="{DynamicResource FreelancersDialog_DataGrid_Skills}"
                    HeaderStyle="{DynamicResource DialogDataGridHeaderStyle}" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Rating}"
                    ElementStyle="{DynamicResource DialogDataGridCellStyle}"
                    Header="{DynamicResource FreelancersDialog_DataGrid_Rating}"
                    HeaderStyle="{DynamicResource DialogDataGridHeaderStyle}" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Description}"
                    ElementStyle="{DynamicResource DialogDataGridCellStyle}"
                    Header="{DynamicResource FreelancersDialog_DataGrid_Description}"
                    HeaderStyle="{DynamicResource DialogDataGridHeaderStyle}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
