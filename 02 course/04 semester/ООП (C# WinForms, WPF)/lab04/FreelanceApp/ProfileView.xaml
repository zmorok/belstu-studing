<UserControl
    x:Class="FreelanceApp.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <Grid Style="{StaticResource ProfileAnimation}">
        <StackPanel
            Margin="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">

            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="{DynamicResource Fg_Brush}"
                Text="{DynamicResource MainWindow_Profile_Header}" />

            <TextBlock
                Foreground="{DynamicResource Fg_Brush}"
                Text="{DynamicResource MainWindow_Profile_Username}"
                TextAlignment="Center" />
            <TextBox
                IsReadOnly="True"
                Style="{StaticResource ProfileTextBoxStyle}"
                Text="{Binding Username, Mode=OneWay}"
                TextAlignment="Center" />

            <TextBlock
                Margin="0,10,0,0"
                Foreground="{DynamicResource Fg_Brush}"
                Text="{DynamicResource MainWindow_Profile_Password}"
                TextAlignment="Center" />
            <TextBox
                x:Name="PasswordBox"
                Foreground="{DynamicResource Fg_Brush}"
                Style="{StaticResource ProfileTextBoxStyle}" />

            <TextBlock
                Margin="0,10,0,0"
                Foreground="{DynamicResource Fg_Brush}"
                Text="{DynamicResource MainWindow_Profile_Language}"
                TextAlignment="Center" />
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="0,0,5,0"
                    Command="{Binding SetEnglishCommand}"
                    Content="EN"
                    Style="{DynamicResource LanguageButtonStyle}" />
                <Button
                    Width="80"
                    HorizontalContentAlignment="Right"
                    Command="{Binding SetRussianCommand}"
                    Content="RU"
                    Style="{DynamicResource LanguageButtonStyle}" />
            </StackPanel>

            <TextBlock
                Margin="10,10,0,0"
                Foreground="{DynamicResource Fg_Brush}"
                Text="{DynamicResource MainWindow_Profile_Theme}"
                TextAlignment="Center" />
            <Button
                Width="80"
                Command="{Binding ToggleThemeCommand}"
                Content="{DynamicResource CurrentTheme}"
                Style="{DynamicResource LanguageButtonStyle}" />

            <Button
                Margin="0,20,0,0"
                Command="{Binding SaveCommand}"
                Content="{DynamicResource MainWindow_Profile_Save}"
                Style="{DynamicResource PrimaryButton}" />

            <Button
                Margin="0,10,0,0"
                Command="{Binding GoBackCommand}"
                Content="{DynamicResource MainWindow_Profile_GoBack}"
                Style="{DynamicResource PrimaryButton}" />
        </StackPanel>
    </Grid>
</UserControl>
